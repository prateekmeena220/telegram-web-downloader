{
  "name": "TG Video Downloader",
  "description": "Download Telegram videos as MP4",
  "manifest_version": 3,
  "version": "1.1",
  "permissions": ["downloads", "scripting", "activeTab"],
  "host_permissions": ["https://web.telegram.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.telegram.org/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/ffmpeg/ffmpeg.min.js",
        "libs/ffmpeg/ffmpeg-core.js",
        "libs/ffmpeg/ffmpeg-core.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
